<% layout('layout/boilerplate') %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body text-center">
          <h4 class="card-title fw-semibold mb-3"><%= student.name %> <%= student.last %></h4>
          <h6 class="text-muted mb-3">ID: <%= student.id %></h6>
          <h6 class="text-muted mb-4">Age: <%= student.age %></h6>

          <a href="/student/manage" class="btn btn-dark w-100">Back to Students</a>
        </div>
      </div>
    </div>
  </div>
</div>