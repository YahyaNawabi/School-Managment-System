<% layout('layout/boilerplate') %>

<div class="container">
  <div class="row">
      <h1 class="mb-4">Edit Student Info</h1>
      <div class="card col-12 col-md-8 mx-auto">
          <div class="card-body">
            <form action="/student/edit/<%= student.id %>" method="POST">
              <div class="row">
                <div class="mb-3 col-12 col-md-6">
                  <label for="ID" class="form-label">ID</label>
                  <input type="number" class="form-control" value="<%= student.id %>" id="ID" name="id">
                </div>
                <div class="mb-3 col-12 col-md-6">
                  <label for="Name" class="form-label">Name</label>
                  <input type="text" class="form-control" value="<%= student.name %>" id="Name" name="name">
                </div>
                <div class="mb-3 col-12 col-md-6">
                  <label for="Last" class="form-label">Last Name</label>
                  <input type="text" class="form-control" value="<%= student.last %>" id="Last" name="last">
                </div>
                <div class="mb-3 col-12 col-md-6">
                  <label for="age" class="form-label">Age</label>
                  <input type="number" class="form-control" value="<%= student.age %>" id="Age" name="age">
                </div>
              </div>
              <div> 
                <button type="submit" class="btn btn-dark w-100">Submit</button>
              </div>
            </form>
          </div>
        </div>
  </div>
</div>
