<% layout('layout/boilerplate') %>

<div class="container">
    <h1>Manage Students</h1>
    <div class="table-responsive">
      <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Age</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            
            <% for ( student of students) { %>
              <tr>
                <td><%= student.id %></td>
                <td><%= student.name %></td>
                <td><%= student.last %></td>
                <td><%= student.age %></td>
                <td><a href="/student/show/<%= student.id %>/"><button class=" btn btn-dark">Show</button></a></td>
              </tr>
            <% } %>
          </tbody>
        </table>
    </div>
</div>
