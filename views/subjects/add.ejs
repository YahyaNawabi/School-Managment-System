<% layout('layout/boilerplate') %>

<div class="container">
  <h1>Add New Subject</h1>
  <form action="/subjects/add" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Subject Name</label>
      <input type="text" id="name" name="name" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="class_id" class="form-label">Assign to Class</label>
      <select id="class_id" name="class_id" class="form-select">
        <option value="">No Class Assigned</option>
        <% classes.forEach(cls => { %>
          <option value="<%= cls.id %>"><%= cls.name %></option>
        <% }) %>
      </select>
    </div>
    <button type="submit" class="btn btn-dark">Add Subject</button>
    <a href="/subjects/allSubjects" class="btn btn-dark">Back</a>
  </form>
</div>
