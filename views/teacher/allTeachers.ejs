<% layout('layout/boilerplate') %>

<div class="container">
    <h1>All Teachers</h1>
    <div class="row">
        <div class="button offset-10 mb-3">
            <a href="/teacher/addTeacher"><button class="btn btn-info">+ Add Teacher</button></a>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Age</th>
            <th scope="col">Subject</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (let teacher of teachers) { %>
            <tr>
              <td><%= teacher.id %></td>
              <td><%= teacher.name %></td>
              <td><%= teacher.last %></td>
              <td><%= teacher.age %></td>
              <td><%= teacher.subject || 'N/A' %></td>
              <td>
                <a href="#" class="btn btn-sm btn-primary">Edit</a>
                <a href="#" class="btn btn-sm btn-danger">Delete</a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
</div>
