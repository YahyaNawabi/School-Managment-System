<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Bootstrap Sidebar Layout</title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

  <div class="container-fluid p-0 position-relative ">

    <!-- <header class="navbar navbar-expand navbar-light bg-white border-bottom fixed-top"> -->
    <% if (typeof hideHeader === 'undefined' || !hideHeader) { %>
      <%- include('../include/header.ejs') %>
    <% } %>
    <!-- </header -->

  </div>

  <div class="d-flex">
  <% if (typeof hideSidebar === 'undefined' || !hideSidebar) { %>
    <aside id="sidebar" class="flex-shrink-0 bg-dark text-white vh-100 position-fixed" style="width: 250px; overflow-y: auto; transition: transform 0.3s ease;">
      <%- include('../include/sidebar.ejs') %>
    </aside>
  <% } %>

    <main id="mainContent" class="flex-grow-1 ms-250 p-3" style="margin-left: 250px; margin-top: 150px; transition: margin-left 0.3s ease;">
      <%- body %>
    </main>
  </div>

  
  <!-- Bootstrap JS (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
